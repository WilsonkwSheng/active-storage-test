<div>
  <h1>My Page</h1>
  <div>
    <label>Profile Picture</label>
    <div><%= image_tag(@user.profile_picture.variant(resize_to_limit: [150, 150])) %></div>
    <div>
      <%= link_to "Click here to download", rails_blob_path(@user.profile_picture, disposition: "attachment") %>
      <%= link_to "Click here to preview", rails_blob_path(@user.profile_picture, disposition: 'preview') %>
    </div>
  </div>
  <div>
    <label>Email</label>
    <div><%= @user.email %></div>
  </div>
</div>
